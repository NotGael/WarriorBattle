<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.warriorbattle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="controller.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="controller.Menu" 
            android:label="Menu" >
        </activity>
        <activity 
            android:name="controller.Warrior" 
            android:label="Warrior" >
        </activity>
        <activity 
            android:name="controller.Shop" 
            android:label="Shop" >
        </activity>
        <activity 
            android:name="controller.Arena" 
            android:label="Arena" >
        </activity>
        <activity 
            android:name="controller.Fight" 
            android:label="Fight" >
        </activity>
        <activity 
            android:name="controller.Item" 
            android:label="Item" >
        </activity>
        <activity 
            android:name="controller.SignUp" 
            android:label="SignUp" >
        </activity>
    </application>

</manifest>
